
@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GentelmansProject</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Index.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

</head>
<body>
  
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container text-white py-5 d-flex align-items-center justify-content-between">
            <!-- Sol Taraf: Metin -->
            <div class="hero-text col-md-6 text-center text-md-start">
                <h1 class="display-4 fw-bold">Şehrinizdeki Kuaför İhtiyaçlarınız</h1>
                <p class="lead">Gentelmans Barber ile profesyonel bakım ve stil şimdi bir tık uzağınızda.</p>
                <div class="mt-4">
                    <a href="#" class="btn btn-success btn-lg me-2">Randevu Al</a>
                    <a href="#" class="btn btn-outline-light btn-lg">Videoyu İzle</a>
                </div>
            </div>
            <!-- Sağ Taraf: Görsel -->
            <div class="hero-image col-md-6 text-center">
                <img src="images/firstpicture.jpg" alt="Kuaför Hizmeti" class="img-fluid rounded shadow">
            </div>
        </div>
    </section>


    <!-- Services Section -->
    <section class="services py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Hizmetlerimiz</h2>
            <div class="row g-4">
                <!-- Service Item 1 -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture1.jpg" class="card-img-top" alt="Hizmet 1">
                        <div class="card-body text-center">
                            <h5 class="card-title">Saç Kesimi</h5>
                            <p class="card-text">Tarzınıza uygun profesyonel saç kesimi hizmeti.</p>
                        </div>
                    </div>
                </div>
                <!-- Service Item 2 -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture2.jpg" class="card-img-top" alt="Hizmet 2">
                        <div class="card-body text-center">
                            <h5 class="card-title">Tıraş</h5>
                            <p class="card-text">Kusursuz tıraş deneyimi için uzman ellerde olun.</p>
                        </div>
                    </div>
                </div>
                <!-- Service Item 3 -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture3.jpg" class="card-img-top" alt="Hizmet 5">
                        <div class="card-body text-center">
                            <h5 class="card-title">Keratin Bakımı</h5>
                            <p class="card-text">Saçlarınıza parlaklık ve güç kazandırmak için keratin bakımı yapılır.</p>
                        </div>
                    </div>
                </div>
                <!-- Service Item 4 -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture4.jpg" class="card-img-top" alt="Hizmet 4">
                        <div class="card-body text-center">
                            <h5 class="card-title">Sakal Bakımı</h5>
                            <p class="card-text">Sakalınıza hak ettiği özeni gösterin.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture5.jpg" class="card-img-top" alt="Hizmet 5">
                        <div class="card-body text-center">
                            <h5 class="card-title">Saç Boyama</h5>
                            <p class="card-text">saçlarınızı renklere boya hizmet sunulur.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <img src="images/picture6.jpg" class="card-img-top" alt="Hizmet 5">
                        <div class="card-body text-center">
                            <h5 class="card-title">Cilt Bakımı</h5>
                            <p class="card-text">Yüzünüzdeki cilt problemlerine yönelik temizleme </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
