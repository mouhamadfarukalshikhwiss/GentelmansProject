@model GentelmansProject.Models.Kaydol

@{
    ViewData["Title"] = "KullanciOlustur";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GentelmansProject</title>
    <link rel="stylesheet" href="~/css/KullanciOlustur.css">

</head>
<body>





    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Gentelmans Barber</a>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="KaydolVeGiris" asp-action="KullanciOlustur">Giris yap</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Randevu Al</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Yapay Zeka</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Servis</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">İletişim</a></li>
                </ul>
            </div>
        </div>
    </nav>



    <h1>Kaydol</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="KullanciOlustur">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kullancı oluştur" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
